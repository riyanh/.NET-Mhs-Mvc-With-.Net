@model Student

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Student</h2>
            <hr />
        </div>
       @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3 row">
           <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
           <div class="col-sm-10">
             <input asp-for="Name" disabled class="form-control">
             <span asp-validation-for="Name" class="text-danger"></span>
           </div>
        </div>
        <div class="mb-3 row">
           <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
           <div class="col-sm-10">
             <input asp-for="Age" disabled class="form-control">
             <span asp-validation-for="Age" class="text-danger"></span>
           </div>
        </div>
        <div class="mb-3 row">
           <label asp-for="Adress" class="col-sm-2 col-form-label">Address</label>
           <div class="col-sm-10">
             <input asp-for="Adress" disabled class="form-control">
             <span asp-validation-for="Adress" class="text-danger"></span>
           </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label"></label>
           <div class="col-sm-10">
             <button type="submit" class="btn btn-dark" style="width:150px">Delete</button>
             <a asp-controller="Student" asp-action="Index" class="btn btn-light" style="width:150px">Back to list</a>
           </div>
        </div>
        
    </div>
</form>