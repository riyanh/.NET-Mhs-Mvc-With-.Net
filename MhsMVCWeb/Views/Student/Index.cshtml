@model IEnumerable<Student>
@{
  ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Student
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Address
            </th>
            <th>
                Option
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.Age
            </td>
            <td>
                @obj.Adress
            </td>
            <td width="15%">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id"
                    class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id"
                    class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
